
.image-box {

	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;

	height: 350rpx;
	overflow: hidden;
}
.image {

	width: 100%;
	height: 100%;

	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.content-box {
	padding-top: 20rpx;
}
.content-box-text {
	font-size: 12px;
	line-height: 22px;
}
.footer-box {

	display: -webkit-box;
	display: -webkit-flex;
	display: flex;

	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
}
.footer-box__item {
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 2px 0;
	font-size: 12px;
	color: #666;
}

