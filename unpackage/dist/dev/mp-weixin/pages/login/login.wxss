button {
	width: 710rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 38rpx;
}
button.login {
	background-color: #FF80AB;
	color: #fff;
}
button.register {
	margin-top: 30rpx;
	color: #FF80AB;
	background-color: #fff;
	border-color: #FF80AB;
	border-width: 2rpx;
}
.register.hover,
.login.hover {
	opacity: 0.6;
}

